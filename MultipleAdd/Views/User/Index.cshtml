                <button class=" btn btn-dark"  id="btnSaveAll">
                    <i class="bi bi-patch-plus"></i> SaveAll
                </button>
            </div>
        </div>
      
        <div class=" container-fluid">
            <table id="tblDB" class=" table table-hover table-bordered px-5 " style="width:100%">
                <thead>
                    <tr>
                        <th>
                             Name
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            State
                        </th>
                        <th>
                            City
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblData"></tbody>
            </table>
            <div class="container10">
            </div>
        </div>

    </div>
</div>


